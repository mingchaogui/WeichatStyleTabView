<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:showIn="@layout/content_main"
    tools:context=".controller.MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        tools:text="标题"/>

    <com.mingchaogui.wechat_style_tab_view.WechatStyleTabView
        android:id="@+id/tab_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:fill_color="@android:color/holo_blue_light"
        app:tab_icon="@drawable/ic_tab_tweet"/>

    <com.mingchaogui.wechat_style_tab_view.WechatStyleTabView
        android:id="@+id/tab_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:fill_color="@android:color/holo_orange_light"
        app:tab_icon="@drawable/ic_tab_focus"/>

    <com.mingchaogui.wechat_style_tab_view.WechatStyleTabView
        android:id="@+id/tab_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:fill_color="@android:color/holo_green_light"
        app:tab_icon="@drawable/ic_tab_self"/>

</LinearLayout>